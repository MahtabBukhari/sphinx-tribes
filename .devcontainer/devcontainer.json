{
  "name": "Sphinx Tribes Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "containerEnv": {
    "POSTGRES_USER":"postgres",
    "POSTGRES_PASSWORD":"postgres",
    "POSTGRES_DB":"postgres",
    "POSTGRES_HOSTNAME":"localhost",
    "DATABASE_URL":"postgres://postgres:postgres@localhost:5432/postgres",
    "LN_JWT_KEY":"notasecretstring",
    "ALT_HOST":"https://app.github.dev"
  },
  "workspaceFolder": "/workspaces",
  "forwardPorts": [
    13008,
    5432,
    5002,
    15552
  ],
  "postStartCommand": "bash sphinx-tribes/.devcontainer/ports.sh",
  "postAttachCommand": "bash sphinx-tribes/.devcontainer/ports.sh",
  "postCreateCommand": "bash sphinx-tribes/.devcontainer/setup.sh",
  "customizations": {
    "codespaces": {
      "repositories": {
        "stakwork/sphinx-tribes-frontend": {
          "permissions": "write-all"
        }
      }
    },
    "vscode": {
      "settings": {
        "git.autofetch": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "staklink.port": 15552,
        "staklink.repos": {
          "sphinx-tribes-frontend": {
            "start": [
              "yarn",
              "yarn start:codespace"
            ],
            "port": 13008
          },
          "sphinx-tribes": {
            "restart": [
              "go build",
              "./sphinx-tribes"
            ],
            "port": 5002
          }
        }
      },
      "extensions": [
        "stakwork.staklink",
        "golang.go",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  },
  "remoteUser": "root",
  "shutdownAction": "stopCompose"
}